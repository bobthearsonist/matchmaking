@model IEnumerable<PlayerMatcher.User>

@{
    ViewBag.Title = "Index";
}

<h3>Users</h3>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class ="btn btn-primary"})
</p>
<table class="table table-hover table-striped" >
    <tr>
        <th>
            UserName
        </th>
        <th>
            Password
        </th>
        <th>
            Online
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.User_Name)
        </td>
        <td>
            @Guid.NewGuid()
            @*@Html.DisplayFor(modelItem => item.User_Password)*@
        </td>
        <td>
            @if(item.Is_Online.Value){
                @:Yes
            }
            else {
                @:No
            }
            @*@Html.DisplayFor(modelItem => item.Is_Online)*@
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id=item.User_ID }, new { @class = "btn btn-default" })*@ 
            @Html.ActionLink("Details", "Details", new { id=item.User_ID }, new { @class = "btn btn-default" }) 
            @*@Html.ActionLink("Delete", "Delete", new { id=item.User_ID }, new { @class = "btn btn-default" })*@
        </td>
    </tr>
}

</table>
